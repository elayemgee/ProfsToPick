<html>
    <head>
        <title>Professor's Page</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link rel="stylesheet" type="text/css" href="/css/profiles.css">

        <script type="text/javascript" src="topBar.js"></script>    
        
    </head>
    <body>
        <div class = "topBar">
            <a href = "/home.hbs"><h1>Profs To Pick</h1></a>
            <a href = "allProfs.html" class = "page" style = "margin-right: 3%;">View All Profs</a>
            <a href = "colleges.html" class = "page">View By College</a><br>

            <div class = "dropdown">
                <button onclick="dropSearch()" class = "searchbttn"><img src="/images/search.png" alt="search" width="60" height="60"></button>
                <div id="myDropsearch" class="dropdown-content">
                    <input type="text" placeholder="Search.." id="myInput">
                </div>
            </div>
            
            <div class="dropdown">
                <button onclick="dropDown()" class="profilebttn"><img src="/images/user.png" alt="search" style = "max-width: 100%; max-height: 100%;"></button>
                <div id="myDropdown" class="dropdown-content">
                    <a href="profile.html">Profile</a>
                    <a href="login.html">Sign Out</a>
                </div>
            </div>
        </div>

        <button onclick="topFunction()" id="goUp" title="Go to top"><img src="/images/up.png" alt="search" width="60" height="60"></button>

        <div class = "profileTitle">
            <div class = "profilePic"><img src="/images/user.png" alt="search" style = "max-width: 100%; max-height: 100%;"></div> <!-- Removed profProfilePic-->
            
            <h1>Professor's Name</h1><br>
            <p style ="margin-top:40px;">College</p>
            <p style ="margin-top:85px;">Subjects taught</p>
            <p style ="margin-top:130px;">Email</p>
            <a href = "rating_a_prof.html"><button class = "writeReview" type="button">Rate This Professor</button></a>
        </div>

        <div class = "userRatings">
            <h1 class="grayHeader">Your Rated Profs</h1><br>
            <p class = "numReviews">1 Reviews</p>

            {{#each reviews}}
                {{> card name=name refno=refno amount=amount}}
            {{/each}}

        </div>

            
        <footer>
            <div class = "footer">
                <p>CCAPDEV MP<br>Atienza, Capada, Garcia</p>
            </div>
        </footer>
                 
    </body>
</html>