<html>
    <head>
        <title>Professor's Page</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link rel="stylesheet" type="text/css" href="/css/profiles.css">

        <script type="text/javascript" src="topBar.js"></script> 

         <script>
            function reviewOpts() {
                document.getElementById("moreOptions").classList.toggle("reveal");
            }
        </script>   
        
    </head>
    <body>
        {{> topBar}}

        <div class = "profileTitle">
            <div class = "profilePic"><img src="/images/user.png" alt="search" style = "max-width: 100%; max-height: 100%;"></div> <!-- Removed profProfilePic-->
            
            <h1>Professor's Name</h1><br>
            <p style ="margin-top:40px;">College</p>
            <p style ="margin-top:85px;">Subjects taught</p>
            <p style ="margin-top:130px;">Email</p>
            <a href = "rating_a_prof.html"><button class = "writeReview" type="button">Rate This Professor</button></a>
        </div>

        <div class = "userRatings">
            <h1 class="grayHeader">Your Rated Profs</h1><br>
            <p class = "numReviews">1 Reviews</p>

            {{#each reviews}}
                {{> card name=name refno=refno amount=amount}}
            {{/each}}

        </div>

            
        <footer>
            <div class = "footer">
                <p>CCAPDEV MP<br>Atienza, Capada, Garcia</p>
            </div>
        </footer>
                 
    </body>
